<% if user == current_user %>
  <div class="card">
    <div class="card-body">
      <% if user.avatar? %>
        <%= image_tag user.avatar.mini_icon.url, class: "user-avatar" %>
      <% else %>
        <%= image_tag ("mini_noavatar.png"), class: "user-avatar"  %>
      <% end %>
      <%= link_to user.name,  user, class: "current-user user-name" %>
    </div>
  </div>
<% else %>
  <div class="card">
    <div class="card-body">
      <% if user.avatar? %>
        <%= image_tag user.avatar.mini_icon.url, class: "user-avatar" %>
      <% else %>
        <%= image_tag ("mini_noavatar.png"), class: "user-avatar"  %>
      <% end %>
      <%= link_to user.name,  user, class: "other-user user-name"  %>
    </div>
  </div>
<% end %>