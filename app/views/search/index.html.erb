<div class="row">
  <div class="col-md-6 offset-md-3">
    <%= form_with url: "/search", method: :get, local:true, class: "search-form" do |form| %>
      <%= form.text_field :user_name, autofocus: true, placeholder: "ユーザーネームを入力" %>
      <%= form.submit "検索", class: "btn btn-main-green search-btn", id: "post-btn" %>
    <% end %>
  </div>
</div>